public class ProcessaMatriz {

	public static void main(String[] args) {

		String[] frutas = { "uva","goiaba","mamão","morango","laranja","goiaba","melancia"};
				
		System.out.println("A fruta escolhida é : ==> " + frutas[3]);
		System.out.println("A fruta escolhida é : ==> " + frutas[2]);
		System.out.println("A fruta escolhida é : ==> " + frutas[1]);
		System.out.println("A fruta escolhida é : ==> " + frutas[5]);
		System.out.println("A fruta escolhida é : ==> " + frutas[6]);

		for(String lista : frutas) {
			System.out.println(lista);
		}
		
		for (int i = 0; i < frutas.length; i++) {
			System.out.println(i);
		}
	}

}
