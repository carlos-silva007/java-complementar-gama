import java.util.Scanner;

public class Mensagem {

	public static void main(String[] args) {

		Scanner entrada = new Scanner(System.in);

		System.out.println("Informa o nome do Produto: ");
		String nome = entrada.next();
		
		System.out.println("Valor Unitario: ");
		Integer valor = entrada.nextInt();
		
		System.out.println("Quantidade: ");
		Integer quantidade = entrada.nextInt();
		
		Integer soma = valor * quantidade;

		System.out.print("Nome do Produto \n" + nome +"Total de Produtos\n" + soma);
		
		entrada.close();
	}

}
